@inject SignInManager<Appuser> sigInmanager
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <environment include="Development">
        <link href="~/lib/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />
        <link href="~/lib/twitter-bootstrap/css/bootstrap.min.css" rel="stylesheet" />
        <script src="~/lib/jquery/jquery.js"></script>
        <script src="~/lib/twitter-bootstrap/js/bootstrap.js"></script>
        <script src="~/lib/twitter-bootstrap/js/bootstrap.min.js"></script>
        <script src="~/lib/jquery-validate/jquery.validate.js"></script>
        <script src="~/lib/jquery-validate/jquery.validate.min.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
        <link href="~/css/datatables.min.css" rel="stylesheet" />
        <script src="~/js/datatables.js"></script>
        <script src="~/js/datatables.min.js"></script>
      <script src="~/lib/jquery/jquery.js"></script>


    </environment>
    <environment exclude="Development">

        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css"
              integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous"
              asp-fallback-href="~/lib/twitter-bootstrap/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only"
              asp-fallback-test-property="position"
              asp-fallback-test-value="absolute" />
        <script src="~/lib/jquery/jquery.js"></script>
        <script src="~/lib/twitter-bootstrap/js/bootstrap.js"></script>
        <script src="~/lib/twitter-bootstrap/js/bootstrap.min.js"></script>
        <script src="~/lib/jquery-validate/jquery.validate.js"></script>
        <script src="~/lib/jquery-validate/jquery.validate.min.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    </environment>
    <title>@ViewBag.Title</title>
</head>

<body>
    <div class="container-fluid">
        <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
            <a class="navbar-brand" asp-action="Index" asp-controller="Home">
                <img src="~/Images/Logo.png" height="30" width="30" />
            </a>
            <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#collapseNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="collapseNavbar">
                <ul class="navbar-nav">
                 
                    <li class="nav-item m-1 justify-content-center">
                        <a asp-action="Index" asp-controller="Home" class="text-justify" style="-webkit-text-fill-color:aliceblue">Order</a>
                    </li>
                     @if (sigInmanager.IsSignedIn(User) && User.IsInRole("Admin") || User.IsInRole("user"))
                    {
                        <li class="nav-item m-1 justify-content-center">
                            <a asp-action="Cahser" asp-controller="Home" class="text-justify" style="-webkit-text-fill-color:aliceblue">Casher</a>
                        </li>
                    }
                    @if (sigInmanager.IsSignedIn(User) && User.IsInRole("Admin") || User.IsInRole("user"))
                    {
                        <li class="nav-item dropdown">
                            <div class="dropdown">
                                <a class="nav-link dropdown-toggle" data-toggle="dropdown" aria-expanded="false" style="-webkit-text-fill-color:aliceblue;padding-top: 5px;">
                                    Manage
                                </a>

                                <div class="dropdown-menu">
                                    <a asp-action="ListUsers" asp-controller="Administration" class="dropdown-item">Users</a>
                                    <a asp-action="ListRole" asp-controller="Administration" class="dropdown-item">Roles</a>

                                </div>
                            </div>
                        </li>
                    }

                    @if (sigInmanager.IsSignedIn(User) && User.IsInRole("Admin") || User.IsInRole("user"))
                    {
                        <li class="nav-item dropdown">
                            <div class="dropdown">
                                <a class="nav-link dropdown-toggle" data-toggle="dropdown" aria-expanded="false" style="-webkit-text-fill-color:aliceblue;padding-top: 5px;">
                                    Item
                                </a>
                                <div class="dropdown-menu">
                                    <a asp-action="ItemTypeDetails" asp-controller="Home" class="dropdown-item">ItemType</a>
                                    <a asp-action="Itemdetails" asp-controller="Home" class="dropdown-item">AddItem</a>
                                </div>
                            </div>
                        </li>
                    }
                    @if (sigInmanager.IsSignedIn(User) && User.IsInRole("Admin") || User.IsInRole("user"))
                    {
                        <li class="nav-item dropdown">
                            <div class="dropdown">
                                <a class="nav-link dropdown-toggle" data-toggle="dropdown" aria-expanded="false" style="-webkit-text-fill-color:aliceblue;padding-top: 5px;">
                                    Report
                                </a>
                                <div class="dropdown-menu">
                                    <a asp-action="ItemTypeDetails" asp-controller="Home" class="dropdown-item">Daily</a>
                                    <a asp-action="Itemdetails" asp-controller="Home" class="dropdown-item">weekly</a>
                               <a asp-action="Itemdetails" asp-controller="Home" class="dropdown-item">Monthly</a>
                                </div>
                            </div>
                        </li>
                    }

                    @if (sigInmanager.IsSignedIn(User) && User.IsInRole("Admin") || User.IsInRole("user"))
                    {
                        <li class="nav-item dropdown">
                            <div class="dropdown">
                                <a class="nav-link dropdown-toggle" data-toggle="dropdown" aria-expanded="false" style="-webkit-text-fill-color:aliceblue;padding-top: 5px;">
                                    Expenses
                                </a>
                                <div class="dropdown-menu">
                                    <a asp-action="ItemTypeDetails" asp-controller="Home" class="dropdown-item">add</a>
                                    <a asp-action="Itemdetails" asp-controller="Home" class="dropdown-item">weekly</a>
                                    <a asp-action="Itemdetails" asp-controller="Home" class="dropdown-item">Monthly</a>
                                </div>
                            </div>
                        </li>
                    }

                </ul>
                <ul class="navbar-nav ml-auto">
                    @if (sigInmanager.IsSignedIn(User))
                    {
                        <li class="nav-item">
                            <form method="post" asp-action="logout" asp-controller="Account">
                                <button type="submit" class="nav-link btn btn-link pr-0" style="width:auto">
                                    Logout @User.Identity.Name
                                </button>
                            </form>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a asp-action="Register" asp-controller="Account" class="nav-link">Register</a>
                        </li>

                        <li class="nav-item">
                            <a asp-action="login" asp-controller="Account" class="nav-link">login</a>
                        </li>
                    }

                </ul>

            </div>
        </nav>

        <div>
            @RenderBody()
        </div>
    </div>
    @if (IsSectionDefined("Scripts"))
    {
        @RenderSection("Scripts", required: true)
    }



</body>
</html>
