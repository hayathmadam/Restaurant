@model ItemEditViewModel
<div id="ItemModal" aria-labelledby="ItemModal" aria-hidden="true">
    <div class="row pt-5">
        <div class="col-2">
        </div>
        <div class="col-md-8 text-center">
            <div class="card">
                <div class="card-header bg-dark">
                    <div class="row">
                        <div class="col-2">
                        </div>
                        <div id="form-messages" class="alert success btn btn-success" role="alert" style="display:none;">Data has Edited</div>
                        <div class="col-8">
                            <h6 class="card-title" id="ItemTitle" style="-webkit-text-fill-color:aliceblue">  Edit Items </h6>
                        </div>
                        <div class="col-2">
                        </div>

                    </div>
                </div>
                <div class="card-body">
                    <form asp-action="ItemEdit"  method="post" class="mt-3">
                        <div class="form-group row">
                            <label asp-for="ItemName" class="col-sm-2 col-form-label"> ItemName</label>
                            <div class="col-sm-10">
                                <input asp-for="ItemName" class="form-control" placeholder="ItemName" />
                                <span asp-validation-for="ItemName" class="text-danger"></span>
                            </div>
                            <input type="hidden" asp-for="Id"  />
                        </div>
                        <div class="form-group row">
                            <label asp-for="ItemPrice" class="col-sm-2 col-form-label">ItemPrice</label>
                            <div class="col-sm-10">
                                <input asp-for="ItemPrice" class="form-control" placeholder="ItemPrice"  onkeyup=""/>
                                <span asp-validation-for="ItemPrice" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label asp-for="ItemType" class="col-sm-2 col-form-label">ItemType</label>
                            <div class="col-sm-10">
                                <select asp-for="ItemType" class="custom-select mr-sm-2" asp-items="Html.GetEnumSelectList<Item>()">
                                    <option>please select</option>
                                </select>
                                <span asp-validation-for="ItemType" class="text-danger"></span>
                            </div>
                        </div>

                        <div asp-validation-summary="All" ></div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-dark " style="-webkit-text-fill-color:aliceblue">Update</button>
                        </div>
                    </form>

                    @section scripts {
                        <script src="~/js/customscript.js">
                        </script>
                    }


                </div>

                <div class="card-footer badge-dark"> </div>

            </div>
        </div>
    </div>
</div>