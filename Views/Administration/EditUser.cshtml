@model EditUserViewModel
@{
    ViewBag.Title = "Edit User";

}
<div class="row pt-5">
    <div class="col-md-2">
    </div>
    <div class="col-md-8">
        <div class="card">
            <div id="form-messages" class="alert success btn btn-success" role="alert" style="display:none;">Data has deleted</div>
            <div class="card-header bg-dark">
                <h6 class="card-title text-center" style="-webkit-text-fill-color:aliceblue"> User Details </h6>
            </div>
            <div class="card-body">
      <form method="post" class="mt-3" id="USer_Edit" >
    <div class="form-group row">
        <label asp-for="Id" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input  asp-for="Id"  name="id" disabed class="form-control" />
        </div>
    </div>
   <div class="form-group row ">
       <label asp-for="UserName" class="col-sm-2 col-form-label"></label>

       <div class="col-sm-10">
            <input name="UserName" asp-for="UserName"  class="form-control" />
           <span asp-validation-for="UserName" class="text-danger"></span>
       </div>

    </div>
    <div class="form-group row">
        <label asp-for="Email" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
                     <input name="email" asp-for="Email" class="form-control" />
        </div>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row text-center">
         <div class="col-sm-10">
                <button type="button" class="btn btn-primary Senddata">Update</button>
            <a asp-action="ListUsers" class="btn btn-primary">Cancle</a>
        </div>
    </div>
</form>
</div>
<div class="card-footer bg-dark">
</div>
</div>
</div>
</div>
<div class="card">
         <div class="card-header">
             <h3>User Roles  </h3>
         </div>
         <div class="card-body">
             @if(Model.Roles.Any())
            {
             foreach(var role in Model.Roles)
                {
                    <h5 class="card-title">@role</h5>

                }
            }
            else
            {
                <h3 class="card-title"> None at  the moment</h3>
            }

         </div>
         <div class="card-footer">
            <a asp-action="ManageUesrRoles" asp-route-userId="@Model.Id" class="btn btn-primary" style="width:auto">Manage Roles</a>
         </div>


    </div>
    
    <hr />
    <div class="card">
        <div class="card-header">
         <h3 class="card-Title"> user claims</h3>
        </div>
        <div class="card-body">
            @if (Model.Claims.Any())
            {
                @foreach(var claim in Model.Claims)
                {
                    
                  <h2 class="card-title"> @claim</h2>  
                }

            }
            else
            {
                <h2 class="card-title"> None at Moment </h2>

            }

        </div>

        <div class="card-footer">
         <a class="btn btn-primary" style="width:auto" asp-action="ManageUserCalicms" asp-route-userid="@Model.Id"> User Claims</a>
        </div>


    </div>


<script type="text/javascript">
    $('.Senddata').click(function (e) {
        e.preventDefault();
        $.ajax({
            data: $('#USer_Edit').serialize(),
            url: 'http://localhost:5246/Administration/EditUser',
            traditional: true,
            type: "POST",
            dataType: "json",
            success: function (data) {
                jQuery('.alert').show().delay(5000).queue(function (next) {
                    $(this).hide();
                    next(),
                        jQuery('.alert').html(data.success);
                }),
                    window.location.href = '/Administration/ListUsers';
                },
                    error: function (data) {
                        console.log('Error:', data);

                    }

            });
    });
</script>

