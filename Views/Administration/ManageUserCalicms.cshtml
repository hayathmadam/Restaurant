@model UserClaimsViewModel

<form method="post">
<div  class="card">

    <div class="card-header">
        <h2 class="card-title"> CManage User Claims </h2>
    </div>

    <div class="card-body">
        @for(int i= 0; i<Model.Claims.Count;i++)
            {
                <div class="form-check m-1">

                    <input type="hidden" asp-for="@Model.Claims[i].CliamType"  />
                    <input  asp-for="@Model.Claims[i].IsSelected"  calss="form-check-input" />
                    <label  class="form-check-label" asp-for="@Model.Claims[i].IsSelected">
                     @Model.Claims[i].CliamType
                    </label>

              </div>

            }


    </div>

    <div class="card-footer">

      <input type="submit"  class="btn btn-primary" value="Update"  />
            <a class="btn btn-primary" asp-action="EditUser" asp-route-id="@Model.UserId"> Canlce </a>

    </div>


</div>



</form>